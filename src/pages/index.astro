---
import Layout from "../layouts/Layout.astro";
---

<Layout>

  <section class="hero">
    <div class="hero-text">
      <h2 class="font-bold">Edison AI Companion</h2>
      <p class="text-lg">Customizable. Entertaining. Smart. Edison helps you stay productive while having fun at your desk.</p>
      <div class="mt-4 gap-2 flex">
        <button class="btn-primary">Buy Now</button>
        <button class="btn-secondary">Learn More</button>
      </div>
    </div>
    <img src="images/edisson.jpg" width="50px" alt="Edison Robot">
  </section>

  <section class="section">
    <h3>See Edison in Action</h3>
    <div class="videos">
      <iframe src="https://www.youtube.com/embed/dQw4w9WgXcQ" allowfullscreen></iframe>
      <iframe src="https://www.youtube.com/embed/3fumBcKC6RE" allowfullscreen></iframe>
      <iframe src="https://www.youtube.com/embed/tgbNymZ7vqY" allowfullscreen></iframe>
    </div>
  </section>

  <section class="section">
    <h3>Why Edison?</h3>
    <div class="card-grid">
      <div class="card">Lifetime Guarantee</div>
      <div class="card">Smart Assistant</div>
      <div class="card">Software Updates</div>
      <div class="card">24/7 Support</div>
    </div>
  </section>

  <section class="developer-section">
    <h3 class="my-4">Developer Zone</h3>
    <div class="developer-grid">
      <div class="developer-card">
        <h4>API Docs</h4>
        <p class="text-gray">Explore RESTful endpoints and integration guides.</p>
        <a href="#" style="color:#00b4d8">View API</a>
      </div>
      <div class="developer-card">
        <h4>System Architecture</h4>
        <p class="text-gray">Understand Edisonâ€™s modular software and hardware layout.</p>
        <a href="#" style="color:#00b4d8">View Architecture</a>
      </div>
      <div class="developer-card">
        <h4>GitHub Repository</h4>
        <p class="text-gray">Access our open-source projects and SDKs.</p>
        <a href="#" style="color:#00b4d8">Go to GitHub</a>
      </div>
      <div class="developer-card">
        <h4>Tech Stack</h4>
        <p class="text-gray">Learn about the frameworks, libraries, and tools we use.</p>
        <a href="#" style="color:#00b4d8">View Stack</a>
      </div>
    </div>
  </section>

  <section class="section">
    <h3>Contact Us</h3>
    <form class="contact-form">
      <input type="text" placeholder="Name">
      <input type="email" placeholder="Email">
      <textarea rows="4" placeholder="Message"></textarea>
      <button type="submit">Submit</button>
    </form>
  </section>
 
</Layout>
